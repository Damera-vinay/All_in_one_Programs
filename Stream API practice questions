1. Given a list of Person objects with name and age properties, write a program to sort the list of persons by age in ascending order using the Stream API.
-----------------------------------------------------------------------
package com.nit.Streampro;


	import java.util.ArrayList;
	import java.util.Comparator;
	import java.util.List;

	public class SortedPersonAge {
		
		public static void main(String[] args)

		{
			
			List<Person> per = new ArrayList<>();
			per.add(new Person("Scott",28));
			per.add(new Person("Alice",39));
			per.add(new Person("raj",20));
			per.add(new Person("tavi",25));
			
			List<Person> Ascending= per.stream()
					.sorted(Comparator.comparingInt(Person::getAge)).toList();
			System.out.println("Ascending order is :"+Ascending);
			
		}
		
	}
	class Person{
		private String name;
		private int age;
		public Person(String name, int age) {
			super();
			this.name = name;
			this.age = age;
		}
		public String getName() {
			return name;
		}
		
		public int getAge() {
			return age;
		}
		@Override
		public String toString() {
			return "Person [name=" + name + ", age=" + age + "]";
		}
		
		
	}





